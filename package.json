{
  "name": "xlf-sync",
  "version": "1.3.1",
  "description": "Sync Angular XLIFF (1.2 & 2.0) locale files with messages.xlf",
  "type": "module",
  "bin": {
    "xlf-sync": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "node --enable-source-maps dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "echo 'No linter configured'"
  },
  "keywords": [
    "angular",
    "i18n",
    "xliff",
    "xlf",
    "translation",
    "sync",
    "locale",
    "merge"
  ],
  "author": "Anastasios Theodosiou",
  "license": "MIT",
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "fast-glob": "^3.3.3",
    "fast-xml-parser": "^5.3.3",
    "figlet": "^1.10.0",
    "log-symbols": "^7.0.1",
    "ora": "^9.1.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "^4.0.18",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}